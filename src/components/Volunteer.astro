---
import { siteConfig } from "../config";

const hasVolunteer = siteConfig.volunteer && siteConfig.volunteer.length > 0;
---

{
  hasVolunteer && (
    <section
      id="volunteer"
      aria-labelledby="volunteer-heading"
      class="p-8 sm:p-12 md:p-16 lg:p-24"
    >
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">

          {/* Left Title Section */}
          <div class="lg:col-span-4">
            <h2
              id="volunteer-heading"
              class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
            >
              Volunteer
            </h2>

            <!-- Accent bar using Tailwind arbitrary color -->
            <div class={`w-[75px] h-[5px] mt-2 rounded-full bg-[${siteConfig.accentColor}]`} />
          </div>

          {/* Right Timeline Section */}
          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.volunteer.map((item, index) => (
                <div class="relative mb-12 last:mb-0">

                  {/* Timeline marker */}
                  <div
                    class={`absolute left-1/2 -top-2 w-4 h-4 rounded-full
                      -translate-x-1/2 z-20 transition-all duration-300
                      border-2 border-[${siteConfig.accentColor}] bg-[${siteConfig.accentColor}]`}
                  />

                  {/* Connecting vertical line */}
                  {index < siteConfig.volunteer.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 bg-gray-300
                                -translate-x-1/2 translate-y-full z-10" />
                  )}

                  {/* Volunteer entry card */}
                  <div class="bg-white rounded-lg shadow-sm border border-gray-100
                              p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">

                    {/* Heading: Title + Organization + Date */}
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                          {item.title}
                        </h3>

                        <!-- Organization uses Tailwind arbitrary text color -->
                        <p class={`text-base sm:text-lg text-[${siteConfig.accentColor}]`}>
                          {item.company}
                        </p>
                      </div>
                      <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                        {item.dateRange}
                      </span>
                    </div>

                    {/* Description bullets */}
                    <ul class="space-y-2">
                      {item.bullets.map((point) => (
                        <li class="flex items-start">
                          <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400
                                        mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm sm:text-base text-gray-600 leading-relaxed">
                            {point}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>

                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
